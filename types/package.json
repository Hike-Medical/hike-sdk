{
  "name": "@hike/types",
  "private": true,
  "version": "1.0.0",
  "description": "Hike SDK enables using our services for manufacturing prosthetics and orthotics medical devices with our AI and 3D printing technology.",
  "keywords": [
    "insoles",
    "medical",
    "foot",
    "health",
    "orthotics",
    "prosthetics",
    "healthcare"
  ],
  "author": "support@hikemedical.com",
  "license": "Apache-2.0",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build && tsc --project tsconfig.cjs.json",
    "dev": "tsc --watch",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "format": "npx prettier --check . --ignore-path ./.prettierignore --ignore-path ../../../.gitignore",
    "clean": "rm -rf node_modules dist",
    "test": "jest"
  },
  "devDependencies": {
    "@hike/config": "workspace:*",
    "eslint": "^9.26.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*(\\.e2e\\.spec|\\.int\\.test|\\.test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": ["ts-jest", {
        "isolatedModules": true,
        "diagnostics": false
      }]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jose)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.(test|d).ts"
    ],
    "coverageDirectory": "../../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "reflect-metadata"
    ],
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/src/$1",
      "^@/(.*)": "<rootDir>/src/$1"
    },
    "silent": true
  },
  "coverageReporters": [
    "json",
    "html"
  ]
}
