{
  "extends": "@hike/config/tsconfig",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "jsx": "preserve"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "eslint.config.mjs"]
}
